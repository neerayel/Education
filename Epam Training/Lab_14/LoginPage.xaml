<Page x:Class="Lab_14.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab_14"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Background="White">

    <Grid>
        <TextBlock Text="LastnameINITIALS" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Width="200" Height="30" Margin="0, 0, 0, 50"/>

        <TextBox x:Name="InputTextbox" Opacity="0.5" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" MaxLength="25" Width="200" Height="30" Margin="0, 0, 0, 50" TextChanged="InputTB_Changed"/>
        <Button Content="Log in" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="25" Margin="0, 60, 0, 0" Click="BtnClk_LogIn"/>

        <TextBlock x:Name="WrongInputWarn" Text="Wrong login" Opacity="0" Foreground="Red" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Width="100" Height="20" Margin="0, 10, 0, 0"/>
    </Grid>
</Page>
